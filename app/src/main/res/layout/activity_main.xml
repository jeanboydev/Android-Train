<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="toActivity"
                android:text="Activity"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="toActivityTaskAffinity"
                android:text="Activity TaskAffinity"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toFragment"
                android:text="Fragment"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toService"
                android:text="Service"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toBroadcast"
                android:text="Broadcast"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toContentProvider"
                android:text="ContentProvider"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toRemoteView"
                android:text="RemoteView"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toPermission"
                android:text="Permission"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toListView"
                android:text="ListView"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toRecyclerView"
                android:text="RecyclerView"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toMaterialDesign"
                android:text="Material Design"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="toPatch"
                android:text="Patch"
                android:textAllCaps="false"
                android:theme="@style/Widget.AppCompat.Button" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>